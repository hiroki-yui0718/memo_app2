<!DOCTYPE html>
<html>
  <head>
    <title>MeMo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <div class="container">
  <%= render "layouts/header" %>
  </div>
  
  <div class="box7">
  <div class="box7-1">
  <% if flash.notice.present? %>
  <%= flash.notice %>
  <% end %>
  <%= yield %>
  </div>
  <div class="box7-2">
  <% if current_user %>
  <%= render 'sidebar' %>
  <% end %>
  
  </div>
  </div>
  
  
  <div class="box5 container bg-dark">
  <div class="box5-inner">
    <div class="copyright">
    <p class="text-light">Copyright &copy; TimeSwitch</p>
    </div>
  </div>
  </div>
  
  
  </body>
  </html>