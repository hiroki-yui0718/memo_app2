<div class="container">
<%= form_with model:@memo,local:true do |f| %>
<div class="form-group row">
<%= f.label :article,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.text_field :article,class:"form-control is-valid" %>
</div>
</div>
<div class="form-group row">
<%= f.label :image,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.file_field :image,class:"form-control" %>
</div>
</div>
<div class="form-group row">
<%= f.label :memo1,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.text_area :memo1,class:"form-control form-control-lg" %>
</div>
</div>
<div class="form-group row">
<%= f.label :memo2,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.text_area :memo2,class:"form-control" %>
</div>
</div>
<div class="form-group row">
<%= f.label :memo3,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.text_area :memo3,class:"form-control" %>
</div>
</div>
<div class="form-group row">
<%= f.label :memo4,class:"col-md-2 control-label" %>
<div class="col-md-10">
<%= f.text_area :memo4,class:"form-control" %>
</div>
</div>
<%= f.submit "投稿する",class:'btn btn-primary float-right btn-block' %>
<% end %>
</div>
